<UserControl x:Class="assignment.Views.WaferMap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:assignment.ViewModel"
        mc:Ignorable="d"
        Width="800"
        Height="800"
             >

    <UserControl.DataContext>
        <local:WaferMapVM/>
    </UserControl.DataContext>
    
    <Grid>
        <Canvas Background="Black">
            <ItemsControl ItemsSource="{Binding Coordinates}">
                <ItemsControl.ItemContainerStyle>
                    <Style>
                        <Setter Property="Canvas.Left" Value="{Binding X, PresentationTraceSources.TraceLevel=High}" />
                        <Setter Property="Canvas.Top" Value="{Binding Y, PresentationTraceSources.TraceLevel=High}" />
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Rectangle Width="100" Height="100" Fill="LightGray" Opacity="1" Canvas.ZIndex="1"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Canvas>
    </Grid>
</UserControl>
